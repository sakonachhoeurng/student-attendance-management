{{ form_start(form) }}
    {% if app.session.flashBag.has('success') %}
        <div class="alert alert-danger">
            {% for msg in app.session.flashBag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-sm-6 col-lg-4">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        <label class="control-label">
                            <span>First Name</span>
                        </label>
                    </div>
                    <div class="col-md-7">
                        {{form_widget(
                            form.firstName,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        <label class="control-label">
                            <span>Last Name</span>
                        </label>
                    </div>
                    <div class="col-md-7">
                        {{form_widget(
                            form.lastName,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        <label class="control-label">
                            <span>Phone Number</span>
                        </label>
                    </div>
                    <div class="col-md-7">
                        {{form_widget(
                            form.telephone,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        <label class="control-label">
                            <span>Group</span>
                        </label>
                    </div>
                    <div class="col-md-7">
                        {{form_widget(
                            form.classGroup,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-5">
                        <label class="control-label">
                            <span>Address</span>
                        </label>
                    </div>
                    <div class="col-md-7">
                        {{form_widget(
                            form.address,
                            {
                                'attr': {
                                    'class': 'form-control'
                                }
                            }
                        )}}
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-offset-5 col-md-10">
                        <input
                            type="submit"
                            value="save"
                            class="btn btn-success"
                        >
                        <a
                            href="{{ path(
                                'list_student'
                            ) }}"
                            class="btn btn-default"
                        >
                            Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}